CREATE DATABASE StudentDB;

USE StudentDB;

CREATE TABLE Student (
    id INT PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(50),
    age INT,
    city VARCHAR(50)
);






import java.sql.*;
import java.util.*;

public class JDBC_StudentDB {
    // JDBC URL, username and password
    static final String URL = "jdbc:mysql://localhost:3306/StudentDB";
    static final String USER = "root";  // your MySQL username
    static final String PASS = "root";  // your MySQL password

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int choice = 0;

        try {
            // Step 1: Load and register MySQL JDBC driver
            Class.forName("com.mysql.cj.jdbc.Driver");

            // Step 2: Establish connection
            Connection con = DriverManager.getConnection( URL,USER, PASS);
            System.out.println("‚úÖ Connected to MySQL Database successfully!");

            do {
                System.out.println("\n--- Student Database Menu ---");
                System.out.println("1. Add Record");
                System.out.println("2. Edit Record");
                System.out.println("3. Delete Record");
                System.out.println("4. Fetch Records");
                System.out.println("5. Exit");
                System.out.print("Enter choice: ");
                choice = sc.nextInt();

                switch (choice) {
                    case 1: // Add Record
                        System.out.print("Enter Name: ");
                        String name = sc.next();
                        System.out.print("Enter Age: ");
                        int age = sc.nextInt();
                        System.out.print("Enter City: ");
                        String city = sc.next();

                        String insertQuery = "INSERT INTO Student(name, age, city) VALUES (?, ?, ?)";
                        PreparedStatement ps1 = con.prepareStatement(insertQuery);
                        ps1.setString(1, name);
                        ps1.setInt(2, age);
                        ps1.setString(3, city);
                        ps1.executeUpdate();
                        System.out.println("‚úÖ Record added successfully!");
                        break;

                    case 2: // Edit Record
                        System.out.print("Enter ID to Edit: ");
                        int editId = sc.nextInt();
                        System.out.print("Enter new City: ");
                        String newCity = sc.next();

                        String updateQuery = "UPDATE Student SET city=? WHERE id=?";
                        PreparedStatement ps2 = con.prepareStatement(updateQuery);
                        ps2.setString(1, newCity);
                        ps2.setInt(2, editId);
                        int rowsUpdated = ps2.executeUpdate();
                        if (rowsUpdated > 0)
                            System.out.println("‚úÖ Record updated successfully!");
                        else
                            System.out.println("‚ö†Ô∏è No record found with that ID.");
                        break;

                    case 3: // Delete Record
                        System.out.print("Enter ID to Delete: ");
                        int delId = sc.nextInt();

                        String deleteQuery = "DELETE FROM Student WHERE id=?";
                        PreparedStatement ps3 = con.prepareStatement(deleteQuery);
                        ps3.setInt(1, delId);
                        int rowsDeleted = ps3.executeUpdate();
                        if (rowsDeleted > 0)
                            System.out.println("‚úÖ Record deleted successfully!");
                        else
                            System.out.println("‚ö†Ô∏è No record found with that ID.");
                        break;

                    case 4: // Fetch Records
                        String selectQuery = "SELECT * FROM Student";
                        Statement stmt = con.createStatement();
                        ResultSet rs = stmt.executeQuery(selectQuery);

                        System.out.println("\n--- Student Records ---");
                        while (rs.next()) {
                            System.out.println("ID: " + rs.getInt("id") + 
                                               ", Name: " + rs.getString("name") +
                                               ", Age: " + rs.getInt("age") +
                                               ", City: " + rs.getString("city"));
                        }
                        break;

                    case 5:
                        System.out.println("üëã Exiting...");
                        break;

                    default:
                        System.out.println("‚ö†Ô∏è Invalid choice! Try again.");
                }

            } while (choice != 5);

            // Step 6: Close connection
            con.close();
            sc.close();

        } catch (Exception e) {
            System.out.println("‚ùå Error: " + e.getMessage());
        }
    }
}








//commands
javac -cp ".;mysql-connector-j-8.3.0.jar" JDBC_StudentDB.java

java -cp ".;mysql-connector-j-8.3.0.jar" JDBC_StudentDB
